<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="250.0" prefWidth="230.0" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techupstudio.Controllers.MainController">
   <children>
      <Label text="Simple Calculator">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font>
      </Label>
      <StackPane prefHeight="40.0" prefWidth="300.0">
         <children>
            <Label fx:id="display" prefHeight="24.0" prefWidth="215.0" text="0">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children></StackPane>
      <Label fx:id="result" prefHeight="17.0" prefWidth="212.0" text="result :  " />
      <HBox prefHeight="25.0" prefWidth="300.0" spacing="10.0">
         <children>
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="7" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="8" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="9" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="/" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="300.0" spacing="10.0">
         <children>
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="4" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="5" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="6" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="*" />
         </children>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="300.0" spacing="10.0">
         <children>
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="1" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="2" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="3" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="-" />
         </children>
      </HBox>
      <HBox prefHeight="25.0" prefWidth="300.0" spacing="10.0">
         <children>
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="C" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="0" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="=" />
            <Button layoutX="50.0" layoutY="15.0" mnemonicParsing="false" onAction="#processEvent" prefHeight="15.0" prefWidth="50.0" text="+" />
         </children>
      </HBox>
   </children>
</VBox>
